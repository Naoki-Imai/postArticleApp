<%= form_for @post do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class:"form-control"%>
  </div>

  <div class="form-group">
    <label>URL</label>
    <%= f.text_field :link_url, class:"form-control" %>
  </div>

  <div class="form-group">
    <label>Content</label>
    <%= f.text_area :content, size:"60x20" ,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :menu_id %><br/>
    <%= f.collection_select(:menu_id, Menu.all, :id, :word, {}, {class:"select-box"}) %>
  </div>

  <div>
    <%= f.submit class:"btn btn-success" %>
  </div>
<% end %>