<%= render 'error/error' %>
<%= form_for(@menu, method: :post ,multipart: true )do |f| %>
  <div class="form-group">
    <label>カテゴリー名</label>
    <%# <%= f.label :word, "カテゴリー名" %>
    <%= f.text_field :word, class:"form-control" %>
  </div>

  <div class="form-group">
    <label>画像アップロード</label>
    <%# <%= f.label :image, "画像アップロード" %>
    <%= f.attachment_field :image, class:"form-control" %>
  </div>
  <div>
    <%= f.submit class:"btn btn-success" %>
  </div>
<% end %>