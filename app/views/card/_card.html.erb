<% for post in @posts %>
  <div class="card mb-3" style="max-width: 100%;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <%# <img class="card-img-top" width="100%" height="250" src="assets/python.png"> %>
        <%= image_tag "#{post.menu.image}", class: "img_size"%>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">記事タイトル：<%= post.title %></h5>
          <p class="card-text">URL：<%= link_to "#{post.link_url}","#{post.link_url}" %></p>
          <p class="card-text">カテゴリー：<%= post.menu.word %></p>
          <%= link_to  "削除", post_path(post), method: :delete, data: { confirm: "削除しますか？"}, class: "btn btn-danger" %>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal<%= post.id %>">
            詳細表示
          </button>
          <%= link_to  "編集", edit_post_path(post), class: "btn btn-success" %>
        </div>
        <div class="modal fade" id="exampleModal<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><%= post.title %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= post.content%>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <%= link_to  "LINK", "#{post.link_url}", class: "btn btn-primary", target: "_blank" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

